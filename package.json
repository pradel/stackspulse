{
  "name": "stackspulse",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "biome check --apply --no-errors-on-unmatched --files-ignore-unknown=true .",
    "chainhooks:generate": "dotenvx run --env-file=.env.production.local --env-file=.env.production -- node ./scripts/generate-chainhooks.mjs",
    "db:generate": "drizzle-kit generate:sqlite",
    "db:push": "drizzle-kit push:sqlite",
    "db:migrate": "node ./scripts/drizzle-migrate.mjs",
    "app:deploy": "fly deploy --remote-only",
    "prepare": "husky"
  },
  "dependencies": {
    "@radix-ui/themes": "2.0.3",
    "@stacks/transactions": "6.12.0",
    "@t3-oss/env-core": "0.9.2",
    "@t3-oss/env-nextjs": "0.9.2",
    "@tabler/icons-react": "3.1.0",
    "better-sqlite3": "9.4.3",
    "class-variance-authority": "0.7.0",
    "clsx": "2.1.0",
    "drizzle-orm": "0.30.1",
    "husky": "9.0.11",
    "javascript-time-ago": "2.5.9",
    "next": "14.1.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "recharts": "2.12.3",
    "sharp": "0.33.2",
    "tailwind-merge": "2.2.1",
    "tailwindcss-animate": "1.0.7",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.6.1",
    "@dotenvx/dotenvx": "0.25.1",
    "@flydotio/dockerfile": "0.5.2",
    "@types/better-sqlite3": "7.6.9",
    "@types/node": "20.11.27",
    "@types/react": "18.2.65",
    "@types/react-dom": "18.2.22",
    "autoprefixer": "10.4.18",
    "drizzle-kit": "0.20.14",
    "eslint": "8.57.0",
    "eslint-config-next": "14.1.3",
    "eslint-plugin-tailwindcss": "3.15.1",
    "lint-staged": "15.2.2",
    "postcss": "8.4.35",
    "radix-themes-tw": "0.2.1",
    "tailwindcss": "3.4.1",
    "typescript": "5.4.2"
  },
  "lint-staged": {
    "*": [
      "biome check --apply --no-errors-on-unmatched --files-ignore-unknown=true"
    ]
  },
  "dockerfile": {
    "alpine": true,
    "secrets": ["CHAINHOOKS_API_TOKEN"]
  }
}
